<section class="content-header">

    <h1>SERVICE</h1>

</section>
<form id="formulario_servicio" method="post" class="form-horizontal" action="" novalidate="novalidate">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">General</h3>
                </div>

                <div class="box-body">

                    <div class="form-group">
                        <label for="alias" class="col-sm-2 control-label no-pad-right">Proveedor:</label>
                        <div class="col-sm-4">
                            <input disabled class="form-control" type="text" value="@Model.PROVEEDOR_NOMBRE">
                            <input disabled type="hidden" class="form-control" id="proveedor" value="@Model.PROVEEDOR">
                        </div>
                        <div class="col-xs-4">
                            <div class="col-xs-4 col-sm-4">
                                <div class="checkbox checkbox-success checkbox-inline">
                                    <input type="checkbox" class="styled" id="inlineCheckbox1" checked>
                                    <label for="inlineCheckbox1" class="">Active?</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="alias" class="col-sm-2 control-label no-pad-right">Nombre:</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="nombre" placeholder="Enter name" name="nombre">
                        </div>
                    </div>

                    <div class="form-group">

                        <label for="type" class="col-sm-2 control-label no-pad-right">Type:</label>
                        <div class="col-sm-4">
                            <select id="tipo_servicio" class="selectpicker" data-size="5" required>
                                <option value="">--- Seleccione ---</option>
                                <option value="TER">TERRESTRE</option>
                                <option value="HTL">HOTEL</option>
                                <option value="AER">AEREO</option>
                                <option value="OTR">OTROS</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Valoracion Por Servicio:</label>
                        <div class="col-xs-12 col-sm-5 col-md-3">
                            <select id="valorxservicio" class="selectpicker" name="valorxservicio">
                                <option value="">--- Seleccione ---</option>
                                <option value="MTF">MONTO FIJO</option>
                                <option value="CPH">CANTIDAD PASAJEROS O HAB</option>
                                <option value="CXT">CANTIDAD PASAJEROS POR TIPO DE</option>
                                <option value="PVT">PORCENTAJE DE VENTA TOTAL</option>
                                <option value="AUT">AJUSTE A LA UTILIDAD</option>

                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-2">
                            <input class="form-control" id="valor" placeholder="Enter Value">
                        </div>

                    </div>

             
                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Country:</label>
                        <div class="col-xs-12 col-sm-5 col-md-3">
                            <select id="pais" class="selectpicker" data-size="5" data-live-search="true">
                                <option>--- Seleccione ---</option>
                                @foreach (var paises in Model.Paises)
                                {
                                    <option value="@paises.PAIS">@paises.NOMBRE</option>
                                }
                            </select>
                        </div>
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">City:</label>
                        <div class="col-xs-12 col-sm-5 col-md-3">
                            <select id="departamentos" class="selectpicker"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-sm-2 control-label no-pad-right">Service Time (HH:MM):</label>
                        <div class="col-sm-2">
                            <input class="form-control" id="time" placeholder="" type="time">
                        </div>
                        <label for="name" class="col-sm-2 control-label no-pad-right">Until:</label>
                        <div class="col-sm-2">
                            <input class="form-control" id="time_end" placeholder="" type="time">
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label for="name" class="col-sm-2 control-label no-pad-right">Start Service Time (HH:MM):</label>
                        <div class="col-sm-2">
                            <input class="form-control" id="time" placeholder="" type="time">
                        </div>
                    </div>*@

                    <div class="form-group">
                        <label for="name" class="col-sm-2 control-label no-pad-right">Description:</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="descripcion" placeholder="Enter Description">
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                </div>
                <div class="box-body">
                    <div class="panel panel-primary">
                        <div class="form-group">
                            <div class="panel-body">
                                <h5 class="text-on-pannel text-primary"><strong class="text-uppercase">Servicio Incluye </strong></h5>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="Checkboxdesa">
                                        <label for="Checkboxdesa">Desayuno</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="Checkboxalmu">
                                        <label for="Checkboxalmu">Almuerzo</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="Checkboxcena">
                                        <label for="Checkboxcena">Cena</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">

                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header">
                </div>

                <div class="box-body">
                    <div class="panel panel-primary">
                        <div class="form-group">
                            <div class="panel-body">

                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="clienteCheckbox">
                                        <label for="clienteCheckbox" class="">See Client Itenerary</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="proveedorCheckbox">
                                        <label for="proveedorCheckbox" class="">View Itenerary Provider</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="precioCheckbox">
                                        <label for="precioCheckbox" class="">Obligatory Price</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Descriptions</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">Español:</label>
                        <div class="col-xs-12 col-md-11">
                            <textarea class="form-control" id="des_esp" rows="5" placeholder="Enter ..."></textarea>
                            <br />
                        </div>

                        <label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">Ingles:</label>
                        <div class="col-xs-12 col-md-11">
                            <textarea class="form-control" id="des_ingles" rows="5" placeholder="Enter ..."></textarea>
                            <br />
                        </div>

                        <label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">Portugues:</label>
                        <div class="col-xs-12 col-md-11">
                            <textarea class="form-control" id="des_port" rows="5" placeholder="Enter ..."></textarea>
                            <br />
                        </div>

                        <label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">Aleman:</label>
                        <div class="col-xs-12 col-md-11">
                            <textarea class="form-control" id="des_ale" rows="5" placeholder="Enter ..."></textarea>
                            <br />
                        </div>

                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        <button type="button" class="btn btn-warning" id="btn-guardar" disabled="disabled">Guardar</button>
                        <button type="button" class="btn btn-warning" id="btn-cancelar">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="/vendor/formvalidation/js/formValidation.min.js"></script>
<script src="/vendor/formvalidation/js/framework/bootstrap.min.js"></script>