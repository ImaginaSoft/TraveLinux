@model TraveLinux.Web.Models.ServicioViewModels
@{
    ViewBag.Title = "EditarServicio";
}

@section Scripts {
    <script src="~/Scripts/app/MantenimientoServicio.js"></script>
}

<style>
    .text-on-pannel {
        background: #fff none repeat scroll 0 0;
        height: auto;
        margin-left: 20px;
        padding: 3px 5px;
        position: absolute;
        margin-top: -47px;
        border: 1px solid #337ab7;
        border-radius: 8px;
    }

    .panel {
        /* for text on pannel */
        margin-top: 27px !important;
    }

    .panel-body {
        padding-top: 30px !important;
    }
</style>

<section class="content-header">

    <h1>SERVICE UPDATE</h1>

</section>
<form class="form-horizontal">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">General</h3>
                </div>

                <div class="box-body">

                    <div class="form-group">
                        <label for="alias" class="col-sm-2 control-label no-pad-right">Proveedor:</label>
                        <div class="col-sm-4">
                            <input class="form-control" type="text" value="@Model.PROVEEDOR_NOMBRE" disabled>
                            <input type="hidden" class="form-control" id="proveedor" value="@Model.PROVEEDOR">
                        </div>
                        <div class="col-xs-4">
                            <div class="col-xs-4 col-sm-4">
                                <div class="checkbox checkbox-success checkbox-inline">
                                    <input type="checkbox" class="styled" id="inlineCheckbox1" checked>
                                    <label for="inlineCheckbox1" class="">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="alias" class="col-sm-2 control-label no-pad-right">Service Name:</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="nombre" placeholder="Enter name" value="@Model.NOMBRE">
                            <input type="hidden" class="form-control" id="servicio" placeholder="Enter name" value="@Model.SERVICIO">
                        </div>
                    </div>

                    <div class="form-group">

                        <label for="type" class="col-sm-2 control-label no-pad-right">Type:</label>
                        <div class="col-sm-4">
                            <select id="tproveedor" class="selectpicker" data-size="5">

                                @*<option value="@Model.TIPO_SERVICIO">@Model.TIPO_SERVICIO</option>*@
                                <option value="TER">TERRESTRE</option>
                                <option value="HTL">HOTEL</option>
                                <option value="AER">AEREO</option>
                                <option value="OTR">OTROS</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Valoracion Por Servicio:</label>
                        <div class="col-xs-12 col-sm-5 col-md-3">
                            <select id="valorxservicio" class="selectpicker" name="valorxservicio">
                                @*<option value="">@Model.VALORXSERVICIO</option>*@
                                <option value="MTF">MONTO FIJO</option>
                                <option value="CPH">CANTIDAD PASAJEROS O HAB</option>
                                <option value="CXT">CANTIDAD PASAJEROS POR TIPO DE</option>
                                <option value="PVT">PORCENTAJE DE VENTA TOTAL</option>
                                <option value="AUT">AJUSTE A LA UTILIDAD</option>
                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-2">
                            <input class="form-control" id="valor" placeholder="Enter Value" value="@Model.VALOR">
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Country:</label>
                        <div class="col-xs-12 col-sm-5 col-md-3">
                            <select id="pais" class="selectpicker" data-size="5" data-live-search="true">
                                <option value="@Model.PAIS">@Model.PAIS_NOMBRE</option>
                                @foreach (var paises in Model.Paises)
                                {
                                    <option value="@paises.PAIS">@paises.NOMBRE</option>
                                }
                            </select>
                        </div>
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">City:</label>
                        <div class="col-xs-12 col-sm-5 col-md-3">
                            <select id="departamentos" class="selectpicker">

                                <option value="@Model.CIUDAD">@Model.CIUDAD_NOMBRE</option>

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-2 control-label no-pad-right">Start Service Time (HH:MM):</label>
                        <div class="col-sm-2">
                            @*<input class="form-control" type="text" value="@Model.HORA" disabled>*@

                            <input class="form-control" id="time" placeholder="" type="time" value="@Model.HORA">
                        </div>

                        <label for="name" class="col-sm-2 control-label no-pad-right">Until:</label>
                        <div class="col-sm-2">
                            <input class="form-control" id="time_end" placeholder="" type="time" value="@Model.HORA_FIN">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="alias" class="col-sm-2 control-label no-pad-right">Description:</label>
                        <div class="col-sm-4">
                            @*<p>Description:</p>*@
                            <input class="form-control" id="descripcion" placeholder="" value="@Model.DESCRIPCION">
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                    @*<h3 class="box-title">Datos Terciario</h3>*@
                </div>
                <div class="box-body">
                    <div class="panel panel-primary">
                        <div class="form-group">
                            <div class="panel-body">
                                <h5 class="text-on-pannel text-primary"><strong class="text-uppercase">Servicio Incluye </strong></h5>
                                <div class="col-xs-12 col-sm-4">
                                    @*<p>State:</p>*@
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="Checkboxdesa">
                                        <label for="Checkboxdesa">Desayuno</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    @*<p>State:</p>*@
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="Checkboxalmu">
                                        <label for="Checkboxalmu">Almuerzo</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    @*<p>State:</p>*@
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="Checkboxcena">
                                        <label for="Checkboxcena">Cena</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header">
                </div>

                <div class="box-body">
                    <div class="panel panel-primary">
                        <div class="form-group">
                            <div class="panel-body">

                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="clienteCheckbox">
                                        <label for="clienteCheckbox" class="">See Client Itenerary</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="proveedorCheckbox">
                                        <label for="proveedorCheckbox" class="">View Itenerary Provider</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="precioCheckbox">
                                        <label for="precioCheckbox" class="">Obligatory Price</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Description</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">Spanish:</label>
                        <div class="col-xs-12 col-md-11">
                            @*<p>Address:</p>*@
                            <textarea class="form-control" id="des_esp" rows="5" placeholder="Enter ...">@Model.DESC_ESP</textarea>
                            <br />
                        </div>

                        <label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">English:</label>
                        <div class="col-xs-12 col-md-11">
                            @*<p>Address:</p>*@
                            <textarea class="form-control" id="des_ingles" rows="5" placeholder="Enter ...">@Model.DESC_INGL</textarea>
                            <br />
                        </div>

                        <label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">Portuguese:</label>
                        <div class="col-xs-12 col-md-11">
                            @*<p>Address:</p>*@
                            <textarea class="form-control" id="des_port" rows="5" placeholder="Enter ...">@Model.DESC_PORT</textarea>
                            <br />
                        </div>

                        <label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">German:</label>
                        <div class="col-xs-12 col-md-11">
                            @*<p>Address:</p>*@
                            <textarea class="form-control" id="des_ale" rows="5" placeholder="Enter ...">@Model.DESC_ALE</textarea>
                            <br />
                        </div>

                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        <button type="button" class="btn btn-warning" id="btn-actualizar">Actualizar</button>
                        <button type="button" class="btn btn-warning" id="btn-cancelar">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

