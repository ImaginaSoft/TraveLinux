
@{
    ViewBag.Title = "CrearPlantilla";
}

@*<h2>CrearPlantilla GG</h2>*@

@section Scripts {
    <script src="~/Scripts/app/MantenimientoPlantilla.js"></script>
}
<style>
    textarea {
        height: 100px;
        max-height: 100px;
    }

    #label_izq {
        text-align: left;
    }

    .the-legend {
        border-style: none;
        border-width: 0;
        font-size: 14px;
        line-height: 20px;
        margin-bottom: 0;
    }

    .the-fieldset {
        border: 2px groove threedface #444;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }

    .well {
        padding: 1px 0px 10px 10px !important;
        margin-bottom: 20px;
        background-color: #eeeeee !important;
        border: 1px solid #e3e3e3;
    }
</style>

<section class="content-header">

    <h1>Template</h1>

</section>
<section class="content">
    <form class="form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create Template</h3>
                    </div>

                    <div class="box-body">
                        <div class="form-group">
                            <label for="alias" class="col-sm-2 control-label no-pad-right">Template Name:</label>
                            <div class="col-sm-5">
                                <input class="form-control" id="template_name" placeholder="Enter Name">
                            </div>
                            <div class="col-xs-4">
                                <div class="col-xs-4 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="inlineCheckbox1" checked>
                                        <label for="inlineCheckbox1" class="">Active?</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                   
                        <div class="form-group">
                            <label for="alias" class="col-sm-2 control-label no-pad-right">% Markup:</label>
                            <div class="col-xs-12 col-sm-3 col-md-2">
                                <input class="form-control" id="markup" placeholder="Markup">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="alias" class="col-sm-2 control-label no-pad-right">Nº Pax (Adult):</label>
                            <div class="col-xs-12 col-sm-3 col-md-2">
                                <input class="form-control" id="cant_adult" placeholder="# Adult">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="alias" class="col-sm-2 control-label no-pad-right">Nº Pax (Child):</label>
                            <div class="col-xs-12 col-sm-3 col-md-2">
                                <input class="form-control" id="cant_child" placeholder="# Child">
                            </div>
                        </div>
                  
                        <div class="form-group">
                            <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Open Date:</label>
                            <div class="col-xs-12 col-sm-3">
                                <div class="input-group date" id="fecha_inicio">
                                    <input type="text" class="form-control input-sm" data-date-format="YYYY-MM-DD" />
                                    <span class="input-group-addon input-sm">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    

                    </div>
                    <div class="box-footer">
                        <div class="pull-right">
                            <button type="button" class="btn btn-warning" id="btn-guardar">Save Template</button>
                            <button type="button" class="btn btn-warning" id="btn-cancelar">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
