@model TraveLinux.Web.Models.ProveedorViewModels
@{
    ViewBag.Title = "NuevaTarifa";
}


@section Scripts {
    <script src="~/Scripts/app/MantenimientoTarifa.js"></script>
}

<style>
    .the-legend {
        border-style: none;
        border-width: 0;
        font-size: 14px;
        line-height: 20px;
        margin-bottom: 0;
    }

    .the-fieldset {
        border: 2px groove threedface #444;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }
</style>

<section class="content-header">

    @*<h1>Datos Generales</h1>*@

</section>
<form class="form-horizontal">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    @*<h3 class="box-title">Datos Generales</h3>*@
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Supplier:</label>
                        <div class="col-xs-7 col-sm-5">
                            <input class="form-control" id="nombre" value="@Model.NOMBRE" disabled>
                            <input type="hidden" class="form-control" id="proveedor" value="@Model.PROVEEDOR" disabled>
                        </div>
                        <div class="col-xs-4">
                            <div class="col-xs-4 col-sm-4">
                                <div class="checkbox checkbox-success checkbox-inline">
                                    <input type="checkbox" class="styled" id="inlineCheckbox1">
                                    <label for="inlineCheckbox1" class="">State:</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Tariff Name:</label>
                        <div class="col-xs-7 col-sm-5">
                            <input class="form-control" id="tarifa" placeholder="Enter tarifa">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                    @*<h3 class="box-title">Notas</h3>*@
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Start:</label>
                        <div class="col-xs-7 col-sm-5">
                            <div class="input-group date" id="dtp_start">
                                <input type="text" class="form-control input-sm" data-date-format="YYYY-MM-DD" disabled />
                                <span class="input-group-addon input-sm">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Temporada:</label>
                        <div class="col-xs-12 col-sm-12 col-md-3">
                            <select id="temporada" class="selectpicker" data-size="5" @*data-live-search="true"*@>
                                <option>--- Seleccione ---</option>
                                @foreach (var temporadas in Model.Temporada)
                                {
                                    <option value="@temporadas.Temporadas">@temporadas.Descripcion</option>
                                }
                            </select>
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Beginning:</label>
                        <div class="col-xs-7 col-sm-5 dtp_beginning">
                            @*<div class="input-group date" id="dtp_beginning">
                                <input type="text" class="form-control input-sm"/>
                                <span class="input-group-addon input-sm">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Ending:</label>
                        <div class="col-xs-7 col-sm-5 dtp_ending">
                            @*<div class="input-group date" id="dtp_ending">
                                <input type="text" class="form-control input-sm" data-date-format="YYYY-MM-DD"/>
                                <span class="input-group-addon input-sm">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>*@
                    </div>
                    @*<div class="form-group">
                        <input type="text" " id="start" />
                        <input type="text" " id="ending" />
                    </div>*@
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header">
                    @*<h3 class="box-title">Notas</h3>*@
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Notas:</label>
                        <div class="col-xs-9 col-md-5">
                            <textarea class="form-control" id="notas" rows="5" placeholder="Enter ..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        <button type="button" class="btn btn-warning" id="btn-guardar">Guardar</button>
                        <button type="button" class="btn btn-warning" id="btn-cancelar">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>