@model TraveLinux.Web.Models.MantenimientoUsuariosViewModel
@{
    ViewBag.Title = "NuevoCliente";
}


@section Scripts {
    <script src="~/Scripts/app/MantenimientoCliente.js"></script>
}

@section Styles {
    <style>
        textarea {
            height: 100px;
            max-height: 100px;
        }

        #label_izq {
            text-align: left;
        }

        .the-legend {
            border-style: none;
            border-width: 0;
            font-size: 14px;
            line-height: 20px;
            margin-bottom: 0;
        }

        .the-fieldset {
            border: 2px groove threedface #444;
            -webkit-box-shadow: 0px 0px 0px 0px #000;
            box-shadow: 0px 0px 0px 0px #000;
        }

        .well {
            padding: 1px 0px 10px 10px !important;
            margin-bottom: 20px;
            background-color: #eeeeee !important;
            border: 1px solid #e3e3e3;
        }

        p {
            text-align: left;
            font-weight: bold;
        }

        .form-horizontal .form-group {
            margin-bottom: 30px;
        }
    </style>
}
<section class="content-header">

    <h1>Datos Generales</h1>

</section>

<form class="form-horizontal">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    @*<h3 class="box-title">Datos Generales</h3>*@
                </div>

                <div class="box-body">              
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-5 col-md-4 col-lg-4">                            
                            <p>Document:</p>
                            <select id="documento" class="selectpicker" data-size="5">
                                <option>--- Seleccione ---</option>
                                @foreach (var tipoDocumento in Model.TipoDocumentos)
                                {
                                    <option value="@tipoDocumento.DOCUMENTO">@tipoDocumento.DESCRIPCION</option>
                                }
                            </select>

                        </div>
                        <div class="col-xs-7 col-sm-4 col-md-4 col-lg-4">
                            <p>&nbsp;</p>
                            <input class="form-control" id="numero" placeholder="Enter Number">
                        </div>
                        <div class="col-xs-4">
                            <p>&nbsp;</p>
                            <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
                                <div class="checkbox checkbox-success checkbox-inline">
                                    <input type="checkbox" class="styled" id="inlineCheckbox1" checked>
                                    <label for="inlineCheckbox1" class="">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">                        
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3">
                            <p>Name:</p>
                            <input class="form-control" id="nombre" placeholder="Enter Name">
                        </div>                        
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <p>Patern:</p>
                            <input class="form-control" id="paterno" placeholder="Enter Patern">
                        </div>                        
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <p>Matern:</p>
                            <input class="form-control" id="materno" placeholder="Enter Matern">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    @*<h3 class="box-title">Datos Secundarios</h3>*@
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>Status:</p>
                            <select id="estadocivil" class="selectpicker" data-size="5">
                                <option>--- Seleccione ---</option>
                                <option value="Soltero">Soltero</option>
                                <option value="Casado">Casado</option>
                                <option value="Viudo">Viudo</option>
                                <option value="Divorciado">Divorciado</option>
                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>Gender:</p>
                            <select id="genero" class="selectpicker" data-size="5">
                                <option>--- Seleccione ---</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Femenino">Femenino</option>
                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-3">
                            <p>Birth date:</p>
                            <div class="input-group date" id="fechanacimiento">
                                <input type="text" class="form-control input-sm" data-date-format="YYYY-MM-DD" />
                                <span class="input-group-addon input-sm">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>Age range:</p>
                            <select id="estadocivil" class="selectpicker" data-size="5">
                                <option>--- Seleccione ---</option>
                                <option value="">De 18 a 25 </option>
                                <option value="">26 a 30</option>
                                <option value="">31 a 35</option>
                                <option value="">36 a 40</option>
                                <option value="">41 a 55</option>
                                <option value="">56 a más</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
