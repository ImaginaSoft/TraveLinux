@model TraveLinux.Web.Models.ClienteViewModels
@{
    ViewBag.Title = "EditarCliente";
}

<h2>EditarCliente</h2>

@section Scripts {
    <script src="~/Scripts/app/MantenimientoCliente.js"></script>
}

@section Styles {
    <style>
        textarea {
            height: 100px;
            max-height: 100px;
        }

        #label_izq {
            text-align: left;
        }

        .the-legend {
            border-style: none;
            border-width: 0;
            font-size: 14px;
            line-height: 20px;
            margin-bottom: 0;
        }

        .the-fieldset {
            border: 2px groove threedface #444;
            -webkit-box-shadow: 0px 0px 0px 0px #000;
            box-shadow: 0px 0px 0px 0px #000;
        }

        .well {
            padding: 1px 0px 10px 10px !important;
            margin-bottom: 20px;
            background-color: #eeeeee !important;
            border: 1px solid #e3e3e3;
        }

        p {
            text-align: left;
        }

        .form-horizontal .form-group {
            margin-bottom: 30px;
        }
    </style>
}
<section class="content-header">

    <h1>Datos Generales</h1>

</section>

<form class="form-horizontal">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    @*<h3 class="box-title">Datos Generales</h3>*@
                </div>
                <input type="hidden" name="name" id="cliente" value="@Model.CLIENTE" />
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-5 col-md-4 col-lg-4">
                            <p>Document:</p>
                            <select id="documento" class="selectpicker" data-size="5">
                                <option value="@Model.DOCUMENTO">@Model.DOCUMENTO</option>
                                @foreach (var tipoDocumento in Model.TipoDocumentos)
                                {
                                    <option value="@tipoDocumento.DESCRIPCION">@tipoDocumento.DESCRIPCION</option>
                                }
                            </select>

                        </div>
                        <div class="col-xs-7 col-sm-4 col-md-4 col-lg-4">
                            <p>&nbsp;</p>
                            <input class="form-control" id="numero" placeholder="Enter Number" value="@Model.NUMERO">
                        </div>
                        <div class="col-xs-4">
                            <p>&nbsp;</p>
                            <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
                                <div class="checkbox checkbox-success checkbox-inline">
                                    <input type="checkbox" class="styled" id="inlineCheckbox1" checked>
                                    <label for="inlineCheckbox1" class="">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3">
                            <p>Name:</p>
                            <input class="form-control" id="nombre" placeholder="Enter Name" value="@Model.NOMBRE">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <p>Patern:</p>
                            <input class="form-control" id="paterno" placeholder="Enter Patern" value="@Model.PATERNO">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <p>Matern:</p>
                            <input class="form-control" id="materno" placeholder="Enter Matern" value="@Model.MATERNO">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    @*<h3 class="box-title">Datos Secundarios</h3>*@
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>Status:</p>
                            <select id="estadocivil" class="selectpicker" data-size="5">
                                <option value="@Model.ESTADO_CIVIL">@Model.ESTADO_CIVIL</option>
                                <option value="Soltero">Soltero</option>
                                <option value="Casado">Casado</option>
                                <option value="Viudo">Viudo</option>
                                <option value="Divorciado">Divorciado</option>
                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>Gender:</p>
                            <select id="genero" class="selectpicker" data-size="5">
                                <option value="@Model.GENERO">@Model.GENERO</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Femenino">Femenino</option>
                            </select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-3">
                            <p>Birth date:</p>
                            <div class="input-group date" id="fechanacimiento">
                                <input type="text" class="form-control input-sm" data-date-format="DD/MM/YYYY" value="@Model.FEC_NACIMIENTO.Value.ToString("dd/MM/yyyy")"/>
                                <span class="input-group-addon input-sm">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>Age range:</p>
                            <select id="rangoedad" class="selectpicker" data-size="5">
                                <option value="@Model.RANGO_EDAD">@Model.RANGO_EDAD</option>
                                <option value="18-25">De 18 a 25 </option>
                                <option value="26-30">26 a 30</option>
                                <option value="31-35">31 a 35</option>
                                <option value="36-40">36 a 40</option>
                                <option value="41-55">41 a 55</option>
                                <option value="56 a más">56 a más</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    @*<h3 class="box-title">Datos Secundarios</h3>*@
                </div>
                <div class="box-body">
                    <div class="form-group">
                        @*<label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">Country:</label>*@
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>Country:</p>
                            <select id="pais" class="selectpicker" data-size="5" data-live-search="true">
                                <option value="@Model.PAIS">@Model.NOMBRE_PAIS</option>
                                @foreach (var paises in Model.Paises)
                                {
                                    <option value="@paises.PAIS">@paises.NOMBRE</option>
                                }
                            </select>
                        </div>
                        @*<label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">State:</label>*@
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>State:</p>
                            <select id="departamentos" class="selectpicker">
                                <option value="@Model.DEPARTAMENTO">@Model.DEPARTAMENTO</option>
                            </select>
                        </div>
                        @*<label for="name" class="col-xs-12 col-sm-1 control-label no-pad-right">City:</label>*@
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            <p>Language:</p>
                            <select id="idioma" class="selectpicker" data-size="5">
                                <option value="@Model.IDIOMA">@Model.IDIOMA</option>
                                <option value="Spanish">Spanish</option>
                                <option value="English">English</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        @* <label for="name" class="col-xs-12 col-sm-2 col-md-2 control-label no-pad-right">Address:</label>*@
                        <div class="col-sm-7">
                            <p>Address:</p>
                            <textarea class="form-control" id="direccion" rows="5" placeholder="Enter ...">@Model.DIRECCION</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-3">
                            <p>Email:</p>
                            <input class="form-control" id="email1" placeholder="Enter Email" value="@Model.EMAIL">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-3">
                            <p>Email 2:</p>
                            <input class="form-control" id="email2" placeholder="Enter Email" value="@Model.EMAIL_2">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-sm-3">
                            <p>Email 3:</p>
                            <input class="form-control" id="email3" placeholder="Enter Email" value="@Model.EMAIL_3">
                        </div>                    
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header">

                </div>
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-3">
                            <p>Phone:</p>
                            <input class="form-control" id="telefono1" placeholder="Enter Phone" value="@Model.TELEFONO">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-sm-3">
                            <p>Phone 2:</p>
                            <input class="form-control" id="telefono2" placeholder="Enter Phone" value="@Model.TELEFONO_2">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-sm-3">
                            <p>Phone 3:</p>
                            <input class="form-control" id="telefono3" placeholder="Enter Phone" value="@Model.TELEFONO_3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-sm-8">
                            <p>Notas:</p>
                            <textarea class="form-control" id="notas" rows="5" placeholder="Enter ...">@Model.NOTAS</textarea>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        <button type="button" class="btn btn-warning" id="btn-actualizar">Actualizar</button>
                        <button type="button" class="btn btn-warning" id="btn-cancelar">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@if (Model.ESTADO == "1")
{
    <script type="text/javascript">
             document.getElementById("inlineCheckbox1").checked = true;
    </script>
}
else
{
    <script type="text/javascript">
            document.getElementById("inlineCheckbox1").checked = false;
    </script>
}