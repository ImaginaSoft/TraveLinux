@model TraveLinux.Web.Models.MantenimientoUsuariosViewModel
@{
    ViewBag.Title = "Proveedores";
}

@section Scripts {    
<script src="~/Scripts/app/MantenimientoProveedor.js"></script>
}

@section Styles {

<style>
    textarea {
        height: 100px;
        max-height: 100px;
    }
            .form-horizontal .form-group {
            margin-bottom: 30px;
        }
</style>
}
<section class="content-header">
    <h1>Datos Generales</h1>
</section>

    <form class="form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header with-border">
                        @*<h3 class="box-title">Datos Generales</h3>*@
                    </div>

                    <div class="box-body">
                        <div class="form-group">
                            <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Name:</label>
                            <div class="col-xs-7 col-sm-5">
                                <input class="form-control" id="nombre" placeholder="Enter Name">
                            </div>
                            <div class="col-xs-4">
                                <div class="col-xs-4 col-sm-4">
                                    <div class="checkbox checkbox-success checkbox-inline">
                                        <input type="checkbox" class="styled" id="inlineCheckbox1" checked>
                                        <label for="inlineCheckbox1" class="">State</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">                            
                                <label for="alias" class="col-sm-2 control-label no-pad-right">Alias:</label>
                                <div class="col-xs-12 col-sm-5">
                                    <input class="form-control" id="alias" placeholder="Enter Alias">
                                </div>                            
                        </div>
                        <div class="form-group">
                            <label for="type" class="col-xs-12 col-sm-2 control-label no-pad-right">Type:</label>
                            <div class="col-xs-12 col-sm-12 col-md-4">
                                <select id="tproveedor" class="selectpicker" data-size="5">
                                    <option>--- Seleccione ---</option>
                                    <option value="CHF">CHOFER</option>
                                    <option value="GUA">GUIA</option>
                                    <option value="HTL">HOTEL</option>
                                    <option value="OFI">OFICINA</option>
                                    <option value="OTROS">OTROS</option>
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <div class="radio radio-danger">
                                    <input type="radio" name="radio" id="local" value="local">
                                    <label for="local">
                                        Local
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-1">
                                <div class="radio radio-danger">
                                    <input type="radio" name="radio" id="exterior" value="exterior">
                                    <label for="exterior">
                                        Exterior
                                    </label>
                                </div>
                            </div>                          
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-header">
                        @*<h3 class="box-title">Datos Secundarios</h3>*@
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Country:</label>
                            <div class="col-xs-12 col-sm-12 col-md-3">
                                <select id="pais" class="selectpicker" data-size="5" data-live-search="true">
                                    <option>--- Seleccione ---</option>
                                    @foreach (var paises in Model.Paises)
                                    {
                                        <option value="@paises.PAIS">@paises.NOMBRE</option>
                                    }
                                </select>
                            </div>
                            <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">City:</label>
                            <div class="col-xs-12 col-sm-12 col-md-4">
                                @*<p>State:</p>*@
                                <select id="departamentos" class="selectpicker"></select>
                            </div>

                        </div>

                        <div class="form-group">
                            <label for="name" class="col-sm-2 control-label no-pad-right">Address:</label>
                            <div class="col-sm-7">
                                <textarea class="form-control" rows="5" placeholder="Enter ..." id="direccion"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>





        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header">
                        @*<h3 class="box-title">Datos Terciario</h3>*@
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name" class="col-sm-2 control-label no-pad-right">Web Page:</label>
                            <div class="col-sm-7">
                                <input class="form-control" id="paginaweb" name="paginaweb">
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="name" class="col-sm-2 control-label no-pad-right">Ruc:</label>
                            <div class="col-sm-4">
                                <input class="form-control" id="ruc" name="ruc">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Languaje:</label>
                            <div class="col-xs-4 col-sm-1">
                                <select id="idioma" class="selectpicker">
                                    <option>--- Seleccione ---</option>
                                    <option value="ALEMAN">ALEMAN</option>
                                    <option value="ESPAÑOL">ESPAÑOL</option>
                                    <option value="INGLES">INGLES</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header">
                        @*<h3 class="box-title"></h3>*@
                    </div>
                    <div class="box-body">                        
                            @*<div class="col-xs-12 col-sm-12 col-sm-12 text-right">
                                <button type="button" class="btn btn-success btn-sm" id="mostrar_email"> <span class="glyphicon glyphicon-plus"></span></button>
                                <button type="button" class="btn btn-danger btn-sm" id="eliminar_email"> <span class="glyphicon glyphicon-minus"></span></button>
                            </div>*@                        
                        <div class="form-group">                            
                            <div class="col-xs-12 col-sm-12 col-md-3">
                                <p>Email:</p>
                                <input class="form-control" id="email1" placeholder="Enter Email">
                            </div>
                            <div id="caja_dinamico">

                            </div>                            
                            @*<div class="col-xs-12 col-sm-12 col-md-3" id="Email2_dinamico">
                                <p>Email 2:</p>
                                <input class="form-control" id="email2" placeholder="Enter Email">
                            </div>                            
                            <div class="col-xs-12 col-sm-12 col-sm-3" id="Email3_dinamico">
                                <p>Email 3:</p>
                                <input class="form-control" id="email3" placeholder="Enter Email">
                            </div>*@
                            <div class="col-xs-12 col-sm-12 col-sm-3">
                                <p>&nbsp;</p>
                                <button type="button" class="btn btn-success btn-sm" id="mostrar_email"> <span class="glyphicon glyphicon-plus"></span></button>
                                <button type="button" class="btn btn-danger btn-sm" id="eliminar_email"> <span class="glyphicon glyphicon-minus"></span></button>
                            </div>
                        </div>
                    </div>     
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header">
                        @*<h3 class="box-title"></h3>*@
                    </div>
                    <div class="box-body">
                        <div class="form-group">                           
                            <div class="col-xs-12 col-sm-12 col-md-3">
                                <p>Phone:</p>
                                <input class="form-control" id="telefono1" placeholder="Enter Phone">
                            </div>
                            <div id="caja_dinamico_2">

                            </div>                            
                            @*<div class="col-xs-12 col-sm-12 col-md-4">
                                <p>Phone 2:</p>
                                <input class="form-control" id="phone2" placeholder="Enter Phone">
                            </div>                            
                            <div class="col-xs-12 col-sm-12 col-md-4">
                                <p>Phone 3:</p>
                                <input class="form-control" id="phone3" placeholder="Enter Phone">
                            </div>*@
                            <div class="col-xs-12 col-sm-12 col-sm-3">
                                <p>&nbsp;</p>
                                <button type="button" class="btn btn-success btn-sm" id="mostrar_fono"> <span class="glyphicon glyphicon-plus"></span></button>
                                <button type="button" class="btn btn-danger btn-sm" id="eliminar_fono"> <span class="glyphicon glyphicon-minus"></span></button>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="pull-right">
                            <button type="button" class="btn btn-warning" id="btn-guardar">Guardar</button>
                            <button type="button" class="btn btn-warning" id="btn-cancelar">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>