@model TraveLinux.Web.Models.MantenimientoUsuariosViewModel
@{
    ViewBag.Title = "Proveedores";
}

@section Scripts {
    <script src="~/Scripts/app/MantenimientoProveedor.js"></script>
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/vendor/formvalidation/css/formValidation.min.css">


    <style>
        textarea {
            height: 100px;
            max-height: 100px;
            overflow: hidden;
        }

        .form-horizontal .form-group {
            margin-bottom: 30px;
        }

        fieldset.scheduler-border {
            border: 1px groove #ddd !important;
            padding: 0 1.4em 1.4em 1.4em !important;
            margin: 0 0 1.5em 0 !important;
            /* -webkit-box-shadow: 0px 0px 0px 0px #000;*/
            /* box-shadow: 0px 0px 0px 0px #000;*/
            -moz-border-radius: 8px;
            -webkit-border-radius: 8px;
        }

        legend.scheduler-border {
            font-size: 1.2em !important;
            font-weight: bold !important;
            text-align: left !important;
            width: auto;
            padding: 0 10px;
            border-bottom: none;
        }
    </style>
}
<section class="content-header">
    <h1>Supplier</h1>
</section>
<form id="signupForm1" method="post" class="form-horizontal" action="" novalidate="novalidate">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">General Data</h3>
                </div>

                <div class="box-body">

                    <div class="form-group">

                        <label for="name" class="col-sm-2 control-label no-pad-right">Code:</label>
                        <div class="col-sm-5">
                            <input class="form-control" id="ruc" name="ruc">
                        </div>

                        <div class="col-xs-4">
                            <div class="col-xs-4 col-sm-4">
                                <div class="checkbox checkbox-success checkbox-inline">
                                    <input type="checkbox" class="styled" id="inlineCheckbox1" checked>
                                    <label for="inlineCheckbox1" class="">Active?</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Name:</label>
                        <div class="col-xs-8 col-sm-5">
                            <input class="form-control" name="nombre" id="nombre" placeholder="Enter Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="alias" class="col-sm-2 control-label no-pad-right">Alias:</label>
                        <div class="col-xs-12 col-sm-5">
                            <input class="form-control" name="alias" id="alias" placeholder="Enter Alias">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="type" class="col-xs-12 col-sm-2 control-label no-pad-right">Type:</label>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <select id="tproveedor" class="selectpicker" name="" data-size="5">
                                <option>--- Seleccione ---</option>
                                @*<option value="CHF">CHOFER</option>*@
                                <option value="GUA">GUIA</option>
                                <option value="OPE">OPERADOR</option>
                                <option value="HTL">HOTEL</option>
                                <option value="OFI">OFICINA</option>
                                <option value="OTR">OTROS</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Country:</label>
                        <div class="col-xs-12 col-sm-12 col-md-3">
                            <select id="pais" class="selectpicker" data-size="5" data-live-search="true">
                                <option>--- Seleccione ---</option>
                                @foreach (var paises in Model.Paises)
                                {
                                    <option value="@paises.PAIS">@paises.NOMBRE</option>
                                }
                            </select>
                        </div>
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">City:</label>
                        <div class="col-xs-12 col-sm-12 col-md-4">
                            @*<p>State:</p>*@
                            <select id="departamentos" class="selectpicker" data-size="5" data-live-search="true"></select>
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="name" class="col-sm-2 control-label no-pad-right">Address:</label>
                        <div class="col-sm-5">
                            <textarea class="form-control" name="direccion" rows="5" placeholder="Enter ..." id="direccion"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-sm-2 control-label no-pad-right">Web Page:</label>
                        <div class="col-sm-5">
                            <input class="form-control" id="paginaweb" name="paginaweb">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Language:</label>
                        <div class="col-xs-4 col-sm-5">
                            <select id="idioma" class="selectpicker" name="idioma">
                                <option>--- Seleccione ---</option>
                                <option value="ALEMAN">ALEMAN</option>
                                <option value="ESPAÑOL">ESPAÑOL</option>
                                <option value="INGLES">INGLES</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <p>Email:</p>                            
                            <input class="form-control" id="email1" name="email1" placeholder="Enter Email">
                        </div>
                        <div id="caja_dinamico">

                        </div>
                        <div class="col-xs-12 col-sm-12 col-sm-3">
                            <p>&nbsp;</p>
                            <button type="button" class="btn btn-success btn-sm" id="mostrar_email"> <span class="glyphicon glyphicon-plus"></span></button>
                            <button type="button" class="btn btn-danger btn-sm" id="eliminar_email"> <span class="glyphicon glyphicon-minus"></span></button>
                        </div>
                    </div>

                    <div class="form-group">                        
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <p>Phone:</p>
                            <input class="form-control" id="telefono1" name="telefono1" placeholder="Enter Phone">
                        </div>
                        <div id="caja_dinamico_2">

                        </div>
                        <div class="col-xs-12 col-sm-12 col-sm-3">
                            <p>&nbsp;</p>
                            <button type="button" class="btn btn-success btn-sm" id="mostrar_fono"> <span class="glyphicon glyphicon-plus"></span></button>
                            <button type="button" class="btn btn-danger btn-sm" id="eliminar_fono"> <span class="glyphicon glyphicon-minus"></span></button>
                        </div>
                    </div>

</div>

                
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Contact</h3>
                </div>
                <div class="box-body">

                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Contact 1:</label>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <input class="form-control" id="nombre_contacto1" name="nombre_contacto" placeholder="Enter Name">
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <input class="form-control" id="posicion_contacto1" name="posicion_contacto" placeholder="Enter Position">
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                                <input class="form-control" id="telefono_contacto1" name="telefono_contacto" placeholder="Enter Phone">
                        </div>          
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Contact 2:</label>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <input class="form-control" id="nombre_contacto2" name="nombre_contacto" placeholder="Enter Name">
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <input class="form-control" id="posicion_contacto2" name="posicion_contacto" placeholder="Enter Position">
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <input class="form-control" id="telefono_contacto2" name="telefono_contacto" placeholder="Enter Phone">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Contact 3:</label>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <input class="form-control" id="nombre_contacto3" name="nombre_contacto" placeholder="Enter Name">
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <input class="form-control" id="posicion_contacto3" name="posicion_contacto" placeholder="Enter Position">
                        </div>
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <input class="form-control" id="telefono_contacto3" name="telefono_contacto" placeholder="Enter Phone">
                        </div>
                    </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header">
                    @*<h3 class="box-title"></h3>*@
                </div>
                <div class="box-body">
              
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        <button type="button" class="btn btn-warning" id="btn-guardar" disabled="disabled">Guardar</button>
                        <button type="button" class="btn btn-warning" id="btn-cancelar">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

            <div class="modal fade" id="myModal" role="dialog" data-toggle="modal" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header modal-header-danger">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            @*<h4 class="modal-title">Modal Header</h4>*@
                            <h4><i class="glyphicon glyphicon-remove"></i> Information</h4>
                        </div>
                        <div class="modal-body">
                            <p>This code already exists</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>



</form>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="/vendor/formvalidation/js/formValidation.min.js"></script>
<script src="/vendor/formvalidation/js/framework/bootstrap.min.js"></script>