@{
    ViewBag.Title = "ServicioCotizacion";
}

<style>
    textarea {
        height: 100px;
        max-height: 100px;
    }

    #label_izq {
        text-align: left;
    }

    .the-legend {
        border-style: none;
        border-width: 0;
        font-size: 14px;
        line-height: 20px;
        margin-bottom: 0;
    }

    .the-fieldset {
        border: 2px groove threedface #444;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
    }

    .well {
        padding: 1px 0px 10px 10px !important;
        margin-bottom: 20px;
        background-color: #eeeeee !important;
        border: 1px solid #e3e3e3;
    }
</style>

<section class="content-header">

    <h1>Datos Generales</h1>

</section>
<section class="content">
    <form class="form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header with-border">
                        @*<h3 class="box-title">Datos Generales</h3>*@
                    </div>

                    <div class="box-body">

                        <div class="form-group">
                            <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">City:</label>
                            <div class="col-xs-3 col-sm-1">
                                <input class="form-control" id="enterAlias">
                            </div>                            
                            <div class="col-xs-9 col-sm-5">
                                <input class="form-control" id="enterAlias">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Type Services:</label>
                            <div class="col-xs-3 col-sm-1">
                                <input class="form-control" id="enterAlias">
                            </div>
                            <div class="col-xs-9 col-sm-5">
                                <input class="form-control" id="enterAlias">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Supplier:</label>
                            <div class="col-xs-8 col-sm-4">
                                <input class="form-control" id="enterAlias">
                            </div>
                            <div class="col-xs-3 col-sm-4">                                
                                <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-search"></span> Search</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="alias" class="col-xs-12 col-sm-2 control-label no-pad-right">Services:</label>
                            <div class="col-xs-3 col-sm-1">
                                <input class="form-control" id="enterAlias">
                            </div>
                            <div class="col-xs-9 col-sm-5">
                                <input class="form-control" id="enterAlias">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-xs-12 col-sm-2 control-label no-pad-right">Open Date:</label>
                            <div class="col-xs-12 col-sm-3">
                                <div class="input-group date" id="datetimepicker1">
                                    <input type="text" class="form-control input-sm" data-date-format="YYYY-MM-DD" />
                                    <span class="input-group-addon input-sm">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="alias" class="col-sm-2 control-label no-pad-right">Day:</label>
                            <div class="col-sm-1">
                                <input class="form-control" id="enterAlias">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="alias" class="col-sm-2 control-label no-pad-right">Seq:</label>
                            <div class="col-sm-1">
                                <input class="form-control" id="enterAlias">
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="pull-right">
                            <button type="button" class="btn btn-warning" id="btn-guardar">Guardar</button>
                            <button type="button" class="btn btn-warning" id="btn-cancelar">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

